{
    "name": "response-operations-ui",
    "version": "1.0.0",
    "license": "LicenceRef-LICENCE",
    "description": "The response operations user interface",
    "directories": {
        "test": "tests"
    },
    "private": true,
    "scripts": {
        "gulp": "npx gulp",
        "test": "npx jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ONSdigital/response-operations-ui.git"
    },
    "author": "Office for National Statistics",
    "bugs": {
        "url": "https://github.com/ONSdigital/response-operations-ui/issues"
    },
    "homepage": "https://github.com/ONSdigital/response-operations-ui#readme",
    "config": {
        "gulp": {
            "SCSS_DIR": "$ROOT/response_operations_ui/assets/scss",
            "CSS_DIR": "$ROOT/response_operations_ui/static/css",
            "JS_SRC_DIR": "$ROOT/response_operations_ui/static/js",
            "JS_DEST_DIR": "$ROOT/response_operations_ui/static/js"
        }
    },
    "jest": {
        "testMatch": [
            "**/*.test.js"
        ],
        "testPathIgnorePatterns": [
            "./node_modules/",
            "./gulp/"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.2.0",
        "browserify": "^16.2.3",
        "chalk": "^2.4.1",
        "eslint": "^5.10.0",
        "eslint-config-google": "^0.11.0",
        "gulp": ">=4.0.0",
        "gulp-autoprefixer": "^6.0.0",
        "gulp-clean-css": "^4.0.0",
        "gulp-eslint": "^5.0.0",
        "gulp-jest": "^4.0.2",
        "gulp-plumber": "^1.2.1",
        "gulp-sass": "^4.0.2",
        "gulp-sourcemaps": "^2.6.4",
        "gulp-stylelint": "^8.0.0",
        "gulp-util": "^3.0.8",
        "jest": "^24.5.0",
        "jest-cli": "^24.5.0",
        "lodash": "^4.17.11",
        "stylelint": "^9.9.0",
        "stylelint-config-standard": "^18.2.0"
    }
}
